	<script type="text/javascript">
		(function(){
			init();
			function init(){
				 responsive();
			};

			function responsive(){
		        var Ww = $(window).outerWidth();
		        Wh = $(window).outerHeight();
		         curElemWid = $(".lightboxrelief").outerWidth(),
		        curElemHih = $(".lightboxrelief").outerHeight(),
		        contentHh = Wh - curElemHih,
	          	 lightContbox = $(".lightboxrelief");	

		        //console.log(roundVal)
		        if(contentHh <0){
		           contentHh = 40;
		          }
		        $(lightContbox).css({
		              top: contentHh / 2,
					  left: (Ww - curElemWid)/2
		          });

		        if($(curElemHih) > Wh){
		          $(set.lightCont).css({
		            maxHeight:Wh-20,
					      height:"100%"
		          });
		        }else{
		    			$(lightContbox).css({
		              maxHeight:Wh-20,
		    			    height:"auto",               
		          });	
				    }

		      }


			$(window).on('resize',function(eve) {
		        responsive();
		        //responsive();
		       setTimeout(responsive, 600);
		       });
			

		})();

		function CreateUser() {
		    var count = 0;
		    count += $(".ans1").val().length > 0 ? 1 : 0;
		    count += $(".ans2").val().length > 0 ? 1 : 0;
		    count += $(".ans3").val().length > 0 ? 1 : 0;
		    count += $(".ans4").val().length > 0 ? 1 : 0;
		    count += $(".ans5").val().length > 0 ? 1 : 0;
		    count += $(".ans6").val().length > 0 ? 1 : 0;
		    count += $(".ans7").val().length > 0 ? 1 : 0;

		    if (!$('.firstName').val() || !$('.lastName').val() || !$('.emailVal').val() || !$('.phoneNumber').val() || isNaN($('.phoneNumber').val()) || $('.phoneNumber').val().length != 10 || !$('.password').val() || $('.address').val().length < 10)
		    {
		        $(".errorMessage").html("Enter All Fields.");
		        $(".errorMessage").css("color", "red");
		    } else if ($('.role').is(":checked") && $('.npi').val().length == 0) {
		        $(".errorMessage").html("Enter NPI.");
		        $(".errorMessage").css("color", "red");
		    }else if(count <  3){
		        $(".errorMessage").html("Answer Atleast 3 Questions");
		        $(".errorMessage").css("color", "red");
		    } else {
		        var formData = {
		            'firstName': $('.firstName').val(),
		            'lastName': $('.lastName').val(),
		            'email': $('.emailVal').val(),
		            'password': $('.password').val(),
		            'phoneNumber': $('.phoneNumber').val(),
		            'provider': $('.role').is(":checked"),
		            'npi': $('.npi').val(),
		            'address': $('.address').val(),
		            'ans1': $(".ans1").val(),
		            'ans2': $(".ans2").val(),
		            'ans3': $(".ans3").val(),
		            'ans4': $(".ans4").val(),
		            'ans5': $(".ans5").val(),
		            'ans6': $(".ans6").val(),
		            'ans7': $(".ans7").val(),
		        };

		        $.ajax({
		            url: "/Service/Registration",
		            type: "post",
		            data: formData,
		            success: function (responseData) {
		                if (responseData == "exists") {
		                    $(".errorMessage").html("Email already exists.");
		                    $(".errorMessage").css("color", "red");
		                } else {
		                    $(".errorMessage").html("Successfully Registered.");
		                    $('.firstName').val(""),
                            $('.lastName').val(""),
                            $('.emailVal').val(""),
                            $('.password').val(""),
                            $('.phoneNumber').val(""),
                            $('.address').val(""),
                            $('.npi').val(""),
                            $(".ans1").val(""),
                            $(".ans2").val(""),
                            $(".ans3").val(""),
                            $(".ans4").val(""),
                            $(".ans5").val(""),
                            $(".ans6").val(""),
                            $(".ans7").val("")
		                }
		            }
		        });
		    }
		    return false;
		};
		$(".loginMain").closest("body").addClass("login");
		$('.questionBlock ul').slimScroll({
		    "height": "324px"
		});
		$(".role").on("change", function () {
		    if ($(this).is(":checked")) {
		        $(".npi").show();
		        $(".npi").val("");
		        $('.regisCntnr .reg-row label').css({
		            "float": "left", "margin": "0"
		        });
		    } else {
		        $(".npi").hide();
		        $('.regisCntnr .reg-row label').css({
		            "float": "right", "margin": "0 -72px 0 0"
		        });
		    }
		});
		//$('.slimScrollDiv').hide();
	</script>
