<div style="background-color: deepskyblue;align-content: center; border-radius: 7px;text-align: center;">
    <h2 style="color: white;">Secure Data</h2>
    <span><b>Patient Name : @Request.QueryString["patid"]</b></span> <br />
</div>
<div style="text-align:center;">
    <li style="display: none;"><a class="med-dat" style="cursor:pointer;text-decoration:none;">Medication Data (oAuth2 Roles Scope)</a></li>
    <li style="display: none;"><a class="obs-dat" style="cursor:pointer;text-decoration:none;">Observation Data Api(UMA)</a></li>
</div>
<br /><br />
<div style="display: none;"><h4>RS - Response Data</h4></div>
<div style="width: 100%;">
    <div id="detailsview" style="width:50%;float: left;"></div>
    <div id="detailsview1" style="width:50%;float: left;"></div>
</div>
@section scripts {
    <script>
        $(".obs-dat").on("click", function () {
            //$('#detailsview').load("/Home/GetData", { searchText: "Lord Jesus my Protector" });
            $.ajax("/Home/GetObsData")
              .done(function (data) {
                  //alert(data);
                  $('#detailsview').html("<h3>Obs Data </h3><pre>" + data + "</pre>");
              })
              .fail(function (err, err1, err2) {
                  alert("error");
              })
              .always(function (data) {
                  //alert("complete");
              });
        });
        $(".med-dat").on("click", function () {
            $.ajax("/Home/GetLabData")
              .done(function (data) {
                  //alert(data);
                  $('#detailsview1').html("<h3>Medication Data </h3><pre>" + data + "</pre>");
              })
              .fail(function (err, err1, err2) {
                  alert("error");
              })
              .always(function (data) {
                  //alert("complete");
              });
        });
        $(".med-dat").trigger("click");
        $(".obs-dat").trigger("click");
    </script>
}